<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:background="#00bfff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0">

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_titlebar"
        app:srcCompat="@drawable/ad1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="主页"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_titlebar"
        app:layout_constraintTop_toTopOf="@+id/layout_titlebar"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/layout_titlebar"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/layout_titlebar" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:id="@+id/constraintLayout6">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-10.00"
            android:textSize="32sp"
            android:layout_marginRight="31dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="33dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公交车"
            android:textSize="21sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginRight="58dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="58dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="73dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/icon_10"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginLeft="29dp"
            app:layout_constraintRight_toLeftOf="@+id/textView4"
            android:layout_marginRight="35dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.52" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:text="周一"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="23dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="11.7"
            android:textSize="21sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginStart="28dp" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="589dp"
        android:layout_height="34dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="301dp"
        tools:layout_editor_absoluteX="2dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_my" />

        <Button
            android:id="@+id/button_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_pay" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_mainpage" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
