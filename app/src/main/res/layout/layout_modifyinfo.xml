                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/button_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_phone" />

            <EditText
                android:id="@+id/text_phone"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:text="17816855145"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/button_phone"
                app:layout_constraintLeft_toLeftOf="@+id/background_input"
                app:layout_constraintTop_toTopOf="@+id/button_phone" />

            <TextView
                android:id="@+id/text_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="8dp"
                android:text=">"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/button_phone"
                app:layout_constraintRight_toRightOf="@+id/button_phone"
                app:layout_constraintTop_toTopOf="@+id/button_phone" />


