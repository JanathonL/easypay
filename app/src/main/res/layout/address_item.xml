<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/address_background_default"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp">

        <EditText
            android:id="@+id/text_number1"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:inputType="none"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="54sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/text_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:background="@null"
            android:ems="10"

            android:inputType="none"
            android:paddingTop="0dp"
            android:text="浙江大学玉泉校区"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/text_number1"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="0dp"
            android:text="收货人"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@+id/text_goodsname"
            app:layout_constraintTop_toBottomOf="@+id/text_goodsname" />

        <EditText
            android:id="@+id/text_phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="0dp"
            android:text="178****5561"
            android:textColor="@android:color/background_light"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/text_name"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />

    </android.support.constraint.ConstraintLayout>

